<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


            <android.support.constraint.ConstraintLayout
                android:id="@+id/balanceButton"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/icon1"
                android:clickable="true"
                android:onClick="gotoBalanceActivity">


                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:contentDescription="@string/no_image"
                    android:onClick="gotoBalanceActivity"
                    android:src="@drawable/back_cripto"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent" />





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="@id/balanceButton"
                    android:textColor="#FFFFFF"/>

            </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/rewardButton"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/icon2"
            android:clickable="true"
            android:onClick="gotoRewardActivity">
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/back_reward"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent" />


            <!-- ImageView

                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="@string/no_image"
                android:src="@drawable/reward"
                app:layout_constraintStart_toStartOf="parent"
                android:clickable="true"
                android:onClick="gotoRewardActivity"/ -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reward"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@id/rewardButton"
                android:textColor="#FFFFFF"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/targetButton"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/icon3"
            android:clickable="true"
            android:onClick="gotoDonateActivity">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/no_image"
                android:src="@drawable/back_donate"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent" />



            <!-- ImageView

                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="@string/no_image"
                android:src="@drawable/donation"
                app:layout_constraintStart_toStartOf="parent" / -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donate"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@id/targetButton"
                android:textColor="#FFFFFF"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/historyButton"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:contentDescription="@string/no_image"
                android:onClick="gotoBalanceActivity"
                android:src="@drawable/back_history"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ImageView

                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="@string/no_image"
                android:src="@drawable/history"
                app:layout_constraintStart_toStartOf="parent" / -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@id/historyButton"
                android:textColor="#FFFFFF"/>

        </android.support.constraint.ConstraintLayout>

        <!--android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/icon4"
            >

            <ImageView
                android:id="@+id/infoButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="@string/no_image"
                android:src="@drawable/donation"
                app:layout_constraintEnd_toEndOf="parent" />

        </android.support.constraint.ConstraintLayout-->


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>